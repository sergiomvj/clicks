generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum UserRole {
  ADMIN
  MANAGER
  MEMBER
  GUEST
  AGENT
}

enum ThreadStatus {
  DISCUSSION
  AWAITING
  DECIDED
  ARCHIVED
}

enum TaskPriority {
  P1
  P2
  P3
  P4
}

enum TaskStatus {
  BACKLOG
  IN_PROGRESS
  IN_REVIEW
  DONE
  BLOCKED
}

enum DealStage {
  PROSPECTION
  QUALIFICATION
  PROPOSAL_SENT
  NEGOTIATION
  CLOSED_WON
  CLOSED_LOST
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          UserRole  @default(MEMBER)
  
  workspaces    WorkspaceMember[]
  messages      Message[]
  authoredTasks Task[]    @relation("TaskAuthor")
  assignedTasks Task[]    @relation("TaskAssignee")
  
  updatedAt     DateTime  @updatedAt
  createdAt     DateTime  @default(now())
}

model Workspace {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  logo        String?
  
  members     WorkspaceMember[]
  spaces      Space[]
  agents      Agent[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model WorkspaceMember {
  id          String    @id @default(uuid())
  workspaceId String
  userId      String
  role        UserRole  @default(MEMBER)
  
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([workspaceId, userId])
}

model Space {
  id          String    @id @default(uuid())
  workspaceId String
  name        String
  description String?
  icon        String?
  
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  channels    Channel[]
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Channel {
  id        String   @id @default(uuid())
  spaceId   String
  name      String
  isPrivate Boolean  @default(false)
  
  space     Space    @relation(fields: [spaceId], references: [id], onDelete: Cascade)
  messages  Message[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Message {
  id        String   @id @default(uuid())
  channelId String
  userId    String
  content   String
  isThread  Boolean  @default(false)
  parentId  String?  // For threads
  
  channel   Channel  @relation(fields: [channelId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  parent    Message? @relation("ThreadMessages", fields: [parentId], references: [id])
  replies   Message[] @relation("ThreadMessages")
  
  threadStatus ThreadStatus? @default(DISCUSSION)
  
  tasks     Task[]   @relation("MessageToTask")
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Task {
  id          String       @id @default(uuid())
  title       String
  description String?
  priority    TaskPriority @default(P3)
  status      TaskStatus   @default(BACKLOG)
  dueDate     DateTime?
  
  authorId    String
  assigneeId  String?
  
  author      User         @relation("TaskAuthor", fields: [authorId], references: [id])
  assignee    User?        @relation("TaskAssignee", fields: [assigneeId], references: [id])
  
  messageId   String?
  message     Message?     @relation("MessageToTask", fields: [messageId], references: [id])
  
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Agent {
  id           String    @id @default(uuid())
  workspaceId  String
  name         String
  role         String    // Specialization: Sales, Marketing, etc.
  repoUrl      String    // Git repo for SOUL.md, etc.
  fbrToken     String    @unique // token_agente
  
  workspace    Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  
  lastActive   DateTime?
  createdAt    DateTime  @default(now())
}

model Deal {
  id          String    @id @default(uuid())
  title       String
  value       Decimal?
  stage       DealStage @default(PROSPECTION)
  
  // A deal can have its own private channel for context
  channelId   String?   @unique
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
